<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_violet">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/about_header"
        android:layout_width="match_parent"
        android:background="@drawable/gradient"
        android:layout_height="@dimen/about_header_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/about_about_button"
            android:layout_width="@dimen/about_about_button_width"
            android:layout_height="@dimen/about_about_button_height"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/about_about_button_margin_top"
            android:layout_marginEnd="@dimen/about_about_button_margin_end"
            app:srcCompat="@drawable/ic_baseline_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/about_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/about_logo_padding_start"
            android:text="@string/about_logo_text"
            android:textStyle="bold"
            android:textSize="@dimen/about_logo_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/about_horizontal_border"
        android:layout_width="match_parent"
        android:layout_height="@dimen/about_horizontal_border_height"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/about_header"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/about_surface_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/about_surface_button_text_text"
        android:textStyle="bold"
        android:textSize="@dimen/about_surface_button_text_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_horizontal_border"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>