<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pharmacy_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pharmacy_header_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/pharmacy_about_button"
            android:layout_width="@dimen/pharmacy_about_button_width"
            android:layout_height="@dimen/pharmacy_about_button_height"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/pharmacy_about_button_margin_top"
            android:layout_marginEnd="@dimen/pharmacy_about_button_margin_end"
            android:background="?attr/colorOnBackground"
            app:srcCompat="@drawable/ic_baseline_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/pharmacy_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/pharmacy_logo_padding_start"
            android:text="VetFormula"
            android:textStyle="bold"
            android:textSize="@dimen/pharmacy_logo_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/pharmacy_horizontal_border"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pharmacy_horizontal_border_layout_height"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/pharmacy_header"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/pharmacy_surface_button"
        android:layout_width="@dimen/pharmacy_surface_button_width"
        android:layout_height="@dimen/pharmacy_surface_button_height"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/pharmacy_surface_button_margin_top"
        android:layout_marginStart="@dimen/pharmacy_surface_button_margin_start"
        android:background="?attr/colorOnBackground"
        app:srcCompat="@drawable/ic_pharmacy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pharmacy_horizontal_border" />

    <TextView
        android:id="@+id/pharmacy_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/pharmacy_button_text_text"
        android:textStyle="bold"
        android:textSize="@dimen/pharmacy_button_text_text_size"
        app:layout_constraintStart_toStartOf="@id/pharmacy_surface_button"
        app:layout_constraintEnd_toEndOf="@id/pharmacy_surface_button"
        app:layout_constraintTop_toBottomOf="@id/pharmacy_surface_button" />

</androidx.constraintlayout.widget.ConstraintLayout>