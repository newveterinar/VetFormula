<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pharmacy_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pharmacy_header_height"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="?attr/colorSecondary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/pharmacy_about_button"
                    android:layout_width="@dimen/pharmacy_about_button_width"
                    android:layout_height="@dimen/pharmacy_about_button_height"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/pharmacy_about_button_margin_top"
                    android:layout_marginEnd="@dimen/pharmacy_about_button_margin_end"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_information_about"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/settings_button"
                    android:layout_width="@dimen/pharmacy_about_button_width"
                    android:layout_height="@dimen/pharmacy_about_button_height"
                    android:layout_marginStart="@dimen/settings_button_margin_start"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/pharmacy_about_button"
                    app:layout_constraintStart_toEndOf="@+id/pharmacy_logo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_settings_24" />

                <TextView
                    android:id="@+id/pharmacy_logo"
                    style="@style/text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/pharmacy_logo_padding_start"
                    android:text="@string/pharmacy_logo_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/pharmacy_horizontal_border"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pharmacy_horizontal_border_layout_height"
                    android:background="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pharmacy_surface_button_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/pharmacy_surface_button_container_margin_start"
                android:layout_marginTop="@dimen/pharmacy_surface_button_container_margin_top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pharmacy_header">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/pharmacy_surface_button"
                    android:layout_width="@dimen/pharmacy_surface_button_width"
                    android:layout_height="@dimen/pharmacy_surface_button_height"
                    android:layout_alignParentEnd="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_health" />

                <TextView
                    android:id="@+id/pharmacy_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/pharmacy_button_text_text"
                    android:textSize="@dimen/pharmacy_button_text_text_size"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pharmacy_surface_button" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fluids_surface_button_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pharmacy_surface_button_container_margin_top"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pharmacy_surface_button_container"
                app:layout_constraintTop_toBottomOf="@id/pharmacy_header">

                <TextView
                    android:id="@+id/fluids_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/fluids_button_text_text"
                    android:textSize="@dimen/pharmacy_button_text_text_size"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fluids_button" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/fluids_button"
                    android:layout_width="@dimen/pharmacy_surface_button_width"
                    android:layout_height="@dimen/pharmacy_surface_button_height"
                    android:layout_alignParentEnd="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_fluids" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/hematology_surface_button_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/hematology_surface_button_marginTop"
                app:layout_constraintEnd_toEndOf="@+id/pharmacy_surface_button_container"
                app:layout_constraintStart_toStartOf="@+id/pharmacy_surface_button_container"
                app:layout_constraintTop_toBottomOf="@+id/pharmacy_surface_button_container">

                <TextView
                    android:id="@+id/hematology_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/hematology_button_text_text"
                    android:textSize="@dimen/hematology_button_text_text_size"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hematology_button" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/hematology_button"
                    android:layout_width="@dimen/conversions_surface_button_width"
                    android:layout_height="@dimen/conversions_surface_button_height"
                    android:layout_alignParentEnd="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_hematology_icon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/conversions_surface_button_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/conversions_surface_button_marginTop"
                app:layout_constraintEnd_toEndOf="@+id/fluids_surface_button_container"
                app:layout_constraintStart_toStartOf="@+id/fluids_surface_button_container"
                app:layout_constraintTop_toBottomOf="@+id/fluids_surface_button_container">

                <TextView
                    android:id="@+id/conversions_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/conversions_button_text_text"
                    android:textSize="@dimen/conversions_button_text_text_size"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/conversions_button" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/conversions_button"
                    android:layout_width="@dimen/conversions_surface_button_width"
                    android:layout_height="@dimen/conversions_surface_button_height"
                    android:layout_alignParentEnd="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_conversions_icon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/calculator_surface_button_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/calculator_surface_button_marginTop"
                app:layout_constraintEnd_toEndOf="@+id/hematology_surface_button_container"
                app:layout_constraintStart_toStartOf="@+id/hematology_surface_button_container"
                app:layout_constraintTop_toBottomOf="@+id/hematology_surface_button_container">

                <TextView
                    android:id="@+id/calculator_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/calculator_button_text_text"
                    android:textSize="@dimen/calculator_button_text_text_size"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/calculator_button" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/calculator_button"
                    android:layout_width="@dimen/calculator_surface_button_width"
                    android:layout_height="@dimen/calculator_surface_button_height"
                    android:layout_alignParentEnd="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_calculator_icon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/timer_surface_button_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/timer_surface_button_container_margin_top"
                app:layout_constraintEnd_toEndOf="@+id/conversions_surface_button_container"
                app:layout_constraintStart_toStartOf="@+id/conversions_surface_button_container"
                app:layout_constraintTop_toBottomOf="@+id/conversions_surface_button_container">

                <TextView
                    android:id="@+id/timer_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/timer_button_text_text"
                    android:textSize="@dimen/timer_button_text_text_size"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/timer_button" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/timer_button"
                    android:layout_width="@dimen/timer_button_width"
                    android:layout_height="@dimen/timer_button_height"
                    android:layout_alignParentEnd="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_stopwatch" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>