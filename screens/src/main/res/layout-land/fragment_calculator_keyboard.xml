<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/run_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/_background_theme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_green" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_zero"
        style="@style/Day.Numbers_style"
        android:text="@string/_0"
        android:visibility="visible"
        app:layout_constraintCircle="@id/_RESULT"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircleRadius="@dimen/button_circle_radius"
        app:layout_constraintEnd_toStartOf="@id/_one"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_one"
        style="@style/Day.Numbers_style"
        android:text="@string/_1"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/_two"
        app:layout_constraintCircle="@id/_RESULT"
        app:layout_constraintCircleAngle="30"
        app:layout_constraintCircleRadius="@dimen/button_circle_radius"
        app:layout_constraintStart_toEndOf="@id/_zero" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_two"
        style="@style/Day.Numbers_style"
        android:text="@string/_2"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/_RESULT"
        app:layout_constraintCircle="@id/_RESULT"
        app:layout_constraintCircleAngle="60"
        app:layout_constraintCircleRadius="@dimen/button_circle_radius"
        app:layout_constraintStart_toEndOf="@id/_RESULT" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_three"
        style="@style/Day.Numbers_style"
        android:text="@string/_3"
        android:visibility="visible"
        app:layout_constraintCircle="@id/_RESULT"
        app:layout_constraintCircleAngle="90"
        app:layout_constraintCircleRadius="@dimen/button_circle_radius"
        app:layout_constraintStart_toEndOf="@id/_RESULT"
        app:layout_constraintTop_toBottomOf="@id/_two" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_four"
        style="@style/Day.Numbers_style"
        android:text="@string/_4"
        android:visibility="visible"
        app:layout_constraintCircle="@id/_RESULT"
        app:layout_constraintCircleAngle="120"
        app:layout_constraintCircleRadius="@dimen/button_circle_radius"
        app:layout_constraintStart_toEndOf="@id/_RESULT"
        app:layout_constraintTop_toBottomOf="@id/_three" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_five"
        style="@style/Day.Numbers_style"
        android:text="@string/_5"
        android:visibility="visible"
        app:layout_constraintCircle="@id/_RESULT"
        app:layout_constraintCircleAngle="150"
        app:layout_constraintCircleRadius="@dimen/button_circle_radius"
        app:layout_constraintEnd_toStartOf="@id/_four"
        app:layout_constraintTop_toBottomOf="@id/_four" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_six"
        style="@style/Day.Numbers_style"
        android:text="@string/_6"
        android:visibility="visible"
        app:layout_constraintCircle="@id/_RESULT"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="@dimen/button_circle_radius"
        app:layout_constraintEnd_toStartOf="@id/_five"
        app:layout_constraintTop_toBottomOf="@id/_equal" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_seven"
        style="@style/Day.Numbers_style"
        android:text="@string/_7"
        android:visibility="visible"
        app:layout_constraintCircle="@id/_RESULT"
        app:layout_constraintCircleAngle="210"
        app:layout_constraintCircleRadius="@dimen/button_circle_radius"
        app:layout_constraintEnd_toStartOf="@id/_six"
        app:layout_constraintTop_toBottomOf="@id/_eight" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_eight"
        style="@style/Day.Numbers_style"
        android:text="@string/_8"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/_seven"
        app:layout_constraintCircle="@id/_RESULT"
        app:layout_constraintCircleAngle="240"
        app:layout_constraintCircleRadius="@dimen/button_circle_radius"
        app:layout_constraintEnd_toStartOf="@id/_seven" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_nine"
        style="@style/Day.Numbers_style"
        android:text="@string/_9"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/_eight"
        app:layout_constraintCircle="@id/_RESULT"
        app:layout_constraintCircleAngle="270"
        app:layout_constraintCircleRadius="@dimen/button_circle_radius"
        app:layout_constraintEnd_toStartOf="@id/_RESULT" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_divide"
        style="@style/Day.Actions_style"
        android:text="@string/_divide"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/_RESULT"
        app:layout_constraintCircle="@id/_RESULT"
        app:layout_constraintCircleAngle="300"
        app:layout_constraintCircleRadius="@dimen/button_circle_radius"
        app:layout_constraintEnd_toStartOf="@id/_RESULT" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_minus"
        style="@style/Day.Actions_style"
        android:text="@string/_minus"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/_divide"
        app:layout_constraintCircle="@id/_RESULT"
        app:layout_constraintCircleAngle="330"
        app:layout_constraintCircleRadius="@dimen/button_circle_radius"
        app:layout_constraintEnd_toStartOf="@id/_zero" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_zapitay"
        style="@style/Day.Actions_style"
        android:text="@string/_zapitay"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/_stepen"
        app:layout_constraintStart_toEndOf="@id/_plus_minus"
        app:layout_constraintTop_toBottomOf="@id/_bracket_open" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_multiply"
        style="@style/Day.Actions_style"
        android:text="@string/_multiply"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@id/_divide"
        app:layout_constraintTop_toTopOf="@id/_divide" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_plus"
        style="@style/Day.Actions_style"
        android:text="@string/_plus"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@id/_minus"
        app:layout_constraintTop_toTopOf="@id/_minus" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_bracket_open"
        style="@style/Day.Actions_style"
        android:text="@string/_bracket_open"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@id/_one"
        app:layout_constraintTop_toTopOf="@id/_one" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_bracket_close"
        style="@style/Day.Actions_style"
        android:text="@string/_bracket_close"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/_two"
        app:layout_constraintTop_toTopOf="@id/_two" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_percent"
        style="@style/Day.Actions_style"
        android:text="@string/_percent"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@id/_five"
        app:layout_constraintTop_toBottomOf="@id/_four" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_plus_minus"
        style="@style/Day.Actions_style"
        android:text="@string/_plus_minus"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/_four"
        app:layout_constraintTop_toTopOf="@id/_four" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_stepen"
        style="@style/Day.Actions_style"
        android:text="@string/_stepen"
        android:textStyle="normal"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@id/_eight"
        app:layout_constraintTop_toTopOf="@id/_eight" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_sqrt"
        style="@style/Day.Actions_style"
        android:text="@string/_sqrt"
        android:textStyle="normal"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@id/_seven"
        app:layout_constraintTop_toBottomOf="@id/_eight" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_equal"
        style="@style/Day.Actions_style"
        android:text="@string/_equal"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/_six"
        app:layout_constraintEnd_toStartOf="@id/_five"
        app:layout_constraintStart_toEndOf="@id/_seven" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_backspace_one"
        style="@style/Day.Actions_style"
        android:text="@string/_backspaceOne"
        android:textStyle="normal"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/_input_history"
        app:layout_constraintEnd_toStartOf="@id/_backspace_two" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_backspace_two"
        style="@style/Day.Actions_style"
        android:text="@string/_backspaceTwo"
        android:textStyle="normal"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/_input_history"
        app:layout_constraintEnd_toStartOf="@id/_backspace" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/_backspace"
        style="@style/Day.Actions_style"
        android:text="@string/_backspace"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/_input_history"
        app:layout_constraintEnd_toEndOf="@id/_input_history" />

    <TextView
        android:id="@+id/_RESULT"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_result_text"
        android:background="@drawable/background_result_textview_day"
        android:ems="@integer/number_output_symbols_forEMS"
        android:gravity="end|center"
        android:paddingStart="@dimen/padding_output_text"
        android:paddingEnd="@dimen/padding_output_text"
        android:text="@string/RESULT_text"
        android:textColor="@color/red_erase_day"
        android:textSize="@dimen/result_history_text_size"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/_equal"
        app:layout_constraintEnd_toStartOf="@id/_three"
        app:layout_constraintStart_toEndOf="@id/_nine"
        app:layout_constraintTop_toTopOf="@id/_zapitay" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/_input_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHeight_max="@dimen/default_input_history_max_height_landscape"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/_zero"
        app:layout_constraintEnd_toStartOf="@id/_stepen"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/_inputed_history_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/input_history_margin_start"
            android:background="@drawable/background_input_history_day"
            android:ems="@integer/number_inputed_symbols_forEMS_landscape"
            android:paddingStart="@dimen/padding_output_text"
            android:paddingEnd="@dimen/padding_output_text"
            android:text="@string/InputHistory_text"
            android:textColor="@color/red_erase_day"
            android:textSize="@dimen/result_history_text_size"
            android:visibility="visible"/>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>