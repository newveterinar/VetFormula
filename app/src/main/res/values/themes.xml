<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="SplashTheme" parent="Splash.LightTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Splash.LightTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorSecondary">@color/light_appbar</item>
        <item name="colorPrimaryVariant">@color/light_appbar</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="textInputStyle">@font/asul_bold</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Splash.DarkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorSecondary">@color/dark_appbar</item>
        <item name="colorPrimaryVariant">@color/dark_appbar</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="textInputStyle">@font/asul_bold</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>